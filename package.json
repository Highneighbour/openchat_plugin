{
  "name": "@elizaos/plugin-openchat",
  "version": "0.1.0",
  "description": "OpenChat integration plugin for ElizaOS - enables agents to interact with OpenChat platform",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "packageType": "plugin",
  "platform": "node",
  "license": "MIT",
  "author": "OpenChat x ElizaOS",
  "keywords": [
    "plugin",
    "elizaos",
    "openchat",
    "web3",
    "chat",
    "bot"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "dependencies": {
    "@elizaos/core": "*",
    "@open-ic/openchat-botclient-ts": "^1.0.61",
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "uuid": "^11.0.3",
    "@msgpack/msgpack": "^3.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "OPENCHAT_BOT_IDENTITY_PRIVATE_KEY": {
        "type": "string",
        "description": "Private key (PEM format) for bot identity on OpenChat",
        "required": true
      },
      "OPENCHAT_PUBLIC_KEY": {
        "type": "string",
        "description": "OpenChat public key for JWT verification",
        "required": true
      },
      "OPENCHAT_IC_HOST": {
        "type": "string",
        "description": "Internet Computer host URL (e.g., https://ic0.app)",
        "required": true
      },
      "OPENCHAT_STORAGE_INDEX_CANISTER": {
        "type": "string",
        "description": "OpenChat storage index canister ID",
        "required": true
      },
      "OPENCHAT_BOT_PORT": {
        "type": "string",
        "description": "Port for OpenChat bot server (default: 3000)",
        "required": false,
        "default": "3000"
      },
      "OPENCHAT_WELCOME_NEW_MEMBERS": {
        "type": "string",
        "description": "Welcome new members when they join (default: false)",
        "required": false,
        "default": "false"
      },
      "OPENCHAT_SAY_GOODBYE": {
        "type": "string",
        "description": "Say goodbye when members leave (default: false)",
        "required": false,
        "default": "false"
      },
      "OPENCHAT_AUTO_RESPOND_ALL": {
        "type": "string",
        "description": "Respond to all messages, not just mentions (default: false)",
        "required": false,
        "default": "false"
      },
      "OPENCHAT_MODERATION_ENABLED": {
        "type": "string",
        "description": "Enable automatic content moderation (default: false)",
        "required": false,
        "default": "false"
      },
      "OPENCHAT_MODERATION_ACTION": {
        "type": "string",
        "description": "Action to take on flagged content: warn, delete (default: warn)",
        "required": false,
        "default": "warn"
      },
      "OPENCHAT_MODERATION_KEYWORDS": {
        "type": "string",
        "description": "Comma-separated list of keywords to flag (default: empty)",
        "required": false,
        "default": ""
      }
    }
  }
}
